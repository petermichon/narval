{
  "tasks": {
    "install": "cd website ; npm install tailwindcss @tailwindcss/cli",
    "build": "cd website ; npx @tailwindcss/cli -i ./styles.css -o ./tailwind.css",
    "serve": "deno run --allow-net --allow-read index.ts",
    "dev-build": "cd website ; npx @tailwindcss/cli -i ./styles.css -o ./tailwind.css --watch",
    "dev": "deno run --allow-net --allow-read --watch index.ts"
  },
  "lint": {
    "rules": {
      "include": [],
      "exclude": ["no-unused-vars", "no-empty", "no-explicit-any"]
    }
  }
}
