{
  "tasks": {
    "install": "cd website ; npm ci",
    "build": "cd website ; npx @tailwindcss/cli -i ./styles.css -o ./tailwind.css ; tsc main.ts",
    "serve": "deno run --allow-net --allow-read index.ts",
    "dev-tailwind": "cd website ; npx @tailwindcss/cli -i ./styles.css -o ./tailwind.css --watch",
    "dev-typescript": "cd website ; tsc main.ts --watch",
    "dev": "deno run --allow-net --allow-read --watch index.ts"
  },
  "lint": {
    "rules": {
      "include": [],
      "exclude": ["no-unused-vars", "no-empty", "no-explicit-any"]
    }
  }
}
